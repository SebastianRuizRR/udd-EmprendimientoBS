{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    // --- CAMBIOS PARA COMPATIBILIDAD CON NETLIFY BUILD ---
    "moduleResolution": "node",       // Revertido de "bundler" a "node"
    // "allowImportingTsExtensions": true, // Esta opci√≥n debe ser eliminada o puesta en false
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    // -----------------------------------------------------

    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}