// ============================================================
// 游닂 Prisma Schema para UDD Emprendimiento (Backend Express)
// Base de datos: SQLite (archivo local dev.db)
// ============================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================================
// Modelo: Profesor
// ============================================================
// Corresponde a /profesores en tu API
// Se crea con: idProfesor, correo, contrasena
// ============================================================
model Profesor {
  idProfesor  String   @id            // Identificador del profesor (PK)
  correo      String?                  // Correo opcional
  contrasena  String                  // Contrase침a del profesor
  salas       Sala[]                  // Relaci칩n 1:N con salas
}

// ============================================================
// Sala
// ============================================================
// Corresponde a /salas en tu API
// Se crea con: idSala, fecha, profesorId (opcional)
// ============================================================
model Sala {
  idSala      String      @id          // C칩digo de la sala (PK)
  fecha       DateTime                   // Fecha de creaci칩n
  profesorId  String?                     // ID del profesor (opcional)
  profesor    Profesor?   @relation(fields: [profesorId], references: [idProfesor])
}
